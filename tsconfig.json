{
  // Visit https://aka.ms/tsconfig to read more about this file

  "compilerOptions": {
    // Modern browser settings (fixes document, querySelector, etc.)
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "moduleResolution": "bundler",          // modern & flexible for browser

    // Output settings
    "outDir": "./dist",                     // compiled .js goes here
    "rootDir": "./ts",                      // ← important: tells TS your sources start from the 'ts' folder
    // so dist/app.js (not dist/ts/app.js)

    "sourceMap": true,                      // helpful for debugging in browser
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["ts/**/*.ts"],                // ← compile ONLY files inside ts/ folder (and subfolders if any)
  "exclude": ["node_modules", "dist"]       // ignore these
}